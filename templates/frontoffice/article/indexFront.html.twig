{% extends 'basecopy.html.twig' %}

{% block title %}Articles {% endblock %}

{% block body %}
    <h1>Articles</h1>
   <div class="blog-page">
            <div class="container-fluid">
               <div class="row">
                  
                   {% for article in articles %}
                  <div class="col-xl-4 col-md-6 mb-25">

                     <div class="blog-card">
                        <div class="blog-card__thumbnail">
                           <a href="#">
                              <img src="{{asset('img/1.png')}}" alt="">
                           </a>
                        </div>
                        <div class="blog-card__details">
                           <div class="blog-card__content">
                              <div class="blog-card__title--top">                                            {{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}
                            </div>
                              <h4 class="blog-card__title">
                                 <a href="#" class="entry-title" rel="bookmark">   {{ article.title }}</a>
                              </h4>
                              <p>     {{ article.content }}           </p>
                           </div>
                           <div class="blog-card__meta">
                              <div class="blog-card__meta-profile">
                                 <img src="{{asset('img/6.png')}}" alt="">
                              </div>
                              <div class="blog-card__meta-profile">
                                 <img src="{{asset('img/7.png')}}" alt="">
                                 <span> {{ article.articleCategory.name }}</span>
                              </div>
                              <div class="blog-card__meta-count">
                                 <ul>
                                    <li>
                                       <div class="blog-card__meta-reaction">
                                          <img src="{{asset('img/3.png')}}" alt="heart" class="svg">
                                          <span class="blog-card__meta-reaction-like">15 K</span>
                                       </div>
                                    </li>
                                    <li>
                                       <div class="blog-card__meta-doc-wrapper">
                                          <img src="{{asset('img/5.png')}}" alt="file-text" class="svg">
                                          <span class="blog-card__meta-doc">75</span>
                                       </div>
                                    </li>
                                 </ul>
                              </div>
                           </div>
                           <a href="{{ path('app_article_showfront', {'id': article.id}) }}"><button class="btn btn-warning" style="background-color:darkred">read more</button> </a>
                        </div>
                     </div>

                  </div>
               {% endfor %}
                  
                  </div>
               </div>
               <!-- ends: .row -->
            </div>
         </div>
    

    
{% endblock %}
