{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <h1>Event</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ event.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ event.description }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ event.status }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ event.location }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ event.image }}</td>
            </tr>
            <tr>
                <th>EventDate</th>
                <td>{{ event.eventDate ? event.eventDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>StartTime</th>
                <td>{{ event.startTime ? event.startTime|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EndTime</th>
                <td>{{ event.endTime ? event.endTime|date('H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="action-btn">
                            <a href="{{ path('app_event_editAdmin', {'id': event.id}) }}" class="btn px-15 btn-primary" > <i class="las la-plus fs-16"></i>Edit Event</a>
                        </div>
    {#<a href="{{ path('app_event_editAdmin', {'id': event.id}) }}">edit</a> #}

    {{ include('BackOffice/event/_delete_form.html.twig') }}
{% endblock %}
