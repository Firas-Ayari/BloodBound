{% extends 'base.html.twig' %}

{% block title %}Basket{% endblock %}

{% block body %}

         <div class="container-fluid">
            <div class="row">
               <div class="col-lg-12">
                  <div class="shop-breadcrumb">

                     <div class="breadcrumb-main">
                        <h4 class="text-capitalize breadcrumb-title"></h4>
                        <div class="breadcrumb-action justify-content-center flex-wrap">
                           <nav aria-label="breadcrumb">
                              <ol class="breadcrumb">
                                 <li class="breadcrumb-item"><a href="#"></a></li>
                                 <li class="breadcrumb-item active" aria-current="page"></li>
                              </ol>
                           </nav>
                        </div>
                     </div>

                  </div>
               </div>
            </div>
         </div>
         <div class="container-fluid">
            <div class="cartPage global-shadow pe-sm-30 ps-sm-30  p-15 py-sm-30 radius-xl w-100 mb-30">
               <div class="row justify-content-center">
                  <div class="cus-xl-9 col-12 ">
                     <div class="product-cart mb-sm-0 mb-20">
                        <div class="table-responsive">
                           <table id="cart" class="table table-borderless table-hover">
                              <thead>
                                 <tr class="product-cart__header" >
                                    <th scope="col" style="background:#A40E1C; color :#ffffff;">Product</th>
                                    <th scope="col" style="background:#A40E1C; color :#ffffff;">Price</th>
                                    <th scope="col" style="background:#A40E1C; color :#ffffff;">Quantity</th>
                                    <th scope="col" class="text-center" style="background:#A40E1C; color :#ffffff;">total</th>
                                    <th scope="col" class="" style="background:#A40E1C; color :#ffffff;"></th>
                                 </tr>
                              </thead>
                              <tbody>
                              {% for cartproduct in cartproducts %}
                                 <tr>
                                    <td class="Product-cart-title">
                                       <div class="media  align-items-center">
                                          <img class="me-3 wh-80 align-self-center radius-xl" src="{{ asset('BackOffice/img/products/Donate Blood Tshirt.jpg') }}" alt="Generic placeholder image">
                                          <div class="media-body">
                                             <h5 class="mt-0">{{ cartproduct.product.name }}</h5>
                                             <div class="d-flex">
                                                <p>Size:<span>large</span></p>
                                                <p>color:<span>brown</span></p>
                                             </div>
                                          </div>
                                       </div>
                                    </td>
                                    <td class="price">${{ cartproduct.product.price }}</td>
                                    <td>
                                       <!-- Start: Product Quantity -->
                                       <div class="quantity product-cart__quantity">
                                       <form>
                                          <input type="number" id="quantity" name="quantity" value="{{ cartproduct.quantity }}" required>
                                          <button style="background:#A40E1C;" type="submit" class="action-btn float-end">
                                          <i class="fa-solid fa-plus" style="color:#ffffff;"></i>
                                       </button>
                                       </form>   
                                       </div>
                                       <!-- End: Product Quantity -->
                                    </td>
                                    <td class="text-center subtotal" style="color:#A40E1C;">{{ cartproduct.total }}</td>
                                    <td class="actions">
                                       <button type="button" class="action-btn float-end">
                                          <i class="las la-trash-alt"></i>
                                       </button>
                                    </td>
                                 </tr>
                                 {% endfor %}
                              </tbody>
                              <tfoot>
                                 <tr>
                                    <td colspan="2">

                                    </td>
                                 </tr>
                              </tfoot>
                           </table><!-- End: table -->
                        </div>
                     </div><!-- End: .product-cart-->
                  </div><!-- End: .cus-xl-9 -->
                  <div class="cus-xl-3 col-md-8 " >
                     <div class="card order-summery p-sm-25 p-15 order-summery--width mt-lg-0 mt-20" style="background:#A40E1C;">
                        <div class="card-header border-bottom-0 p-0 pb-25">
                           <h5 class="fw-500" style="color:#ffffff;">Order Summary</h5>
                        </div>
                        <div class="card-body px-sm-25 px-20">
                           <div class="total">
                              <div class="subtotalTotal">
                                 Subtotal:
                                 <span>${{ basket.total }}</span>
                              </div>
                              <div class="shipping">
                                 Shipping charge:
                                 <span>$46.30</span>
                              </div>
                           </div>
                           <div class="select-cupon position-relative">
                           </div>
                           <div class="promo-code">
                              <form>
                              </form>
                           </div>
                           <div class="total-money d-flex justify-content-between">
                              <h6>Total :</h6>
                              <h5 style="color:#A40E1C;" > $1738.60</h5>
                           </div>
                           <a href="checkout.html" class="checkout btn-secondary content-center w-100 btn-lg mt-20" style="background:#A40E1C;"> procdces to
                              checkout<i class="las la-arrow-right"></i>
                           </a>
                        </div>
                     </div><!-- End: .order-summery-->
                  </div><!-- End: .cus-xl-9 -->
               </div>
            </div><!-- End: .global-shadow -->
         </div>


{% endblock %}