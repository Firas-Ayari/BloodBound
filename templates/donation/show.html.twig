{% extends 'base.html.twig' %}

{% block title %}Donation{% endblock %}

{% block body %}
    <h1>Donation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ donation.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ donation.description }}</td>
            </tr>
            <tr>
                <th>DonLocation</th>
                <td>{{ donation.donLocation }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ donation.email }}</td>
            </tr>
            <tr>
                <th>PhoneNumber</th>
                <td>{{ donation.phoneNumber }}</td>
            </tr>
            <tr>
                <th>DonationDate</th>
                <td>{{ donation.donationDate ? donation.donationDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_donation_index') }}">back to list</a>

    <a href="{{ path('app_donation_edit', {'id': donation.id}) }}">edit</a>

    {{ include('donation/_delete_form.html.twig') }}
